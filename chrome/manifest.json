{
  "manifest_version": 3,
  "name": "DND – AI YouTube Video Blocker",
  "version": "1.2",
  "description": "DND is a smart YouTube content blocker powered by AI — designed to help you remove distracting videos before they ever reach your feed.",
  "permissions": ["storage"],
  "host_permissions": [
    "https://youtube.com/*",
    "https://*.youtube.com/*",
    "https://asia-south1-adverse-436618.cloudfunctions.net/shutthefupp/*"
  ],
  "action": { "default_popup": "popup.html" },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://youtube.com/*", "https://*.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "DND16.png",
    "32": "DND32.png",
    "48": "DND48.png",
    "128": "DND128.png"
  }
}
