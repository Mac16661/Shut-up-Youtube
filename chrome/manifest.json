{
  "manifest_version": 3,
  "name": "ShutUp â€“ AI YouTube Video Blocker",
  "version": "1.0",
  "description": "Hide distracting YouTube videos automatically.",
  "permissions": ["storage"],
  "host_permissions": [
    "https://youtube.com/*",
    "https://*.youtube.com/*",
    "https://asia-south1-adverse-436618.cloudfunctions.net/shutthefupp/*"
  ],
  "action": { "default_popup": "popup.html" },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://youtube.com/*", "https://*.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
